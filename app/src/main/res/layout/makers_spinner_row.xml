<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageView
        android:id="@+id/makers_spinner_image"
        android:layout_width="@dimen/spinner_image_width"
        android:layout_height="@dimen/spinner_image_height"
        android:layout_marginEnd="@dimen/spinner_image_margin"
        android:layout_marginRight="@dimen/spinner_image_margin"
        android:contentDescription="@string/content_description_manufacturer_logo" />

    <TextView
        android:id="@+id/makers_spinner_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

</LinearLayout>