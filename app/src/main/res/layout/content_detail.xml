<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/detail_activity_horizontal_margin"
    android:paddingRight="@dimen/detail_activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.texocoyotl.ptedmundscars.activities.detail.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            style="@style/Details.GridTitle"
            android:text="@string/detail_header_basic_information" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="8dp">

            <TextView
                style="@style/Details.GridFirstLabel"
                android:text="@string/detail_label_market" />

            <TextView
                android:id="@+id/detail_categories_market"
                style="@style/Details.GridText" />

            <TextView
                style="@style/Details.GridSecondLabel"
                android:text="@string/detail_label_size" />

            <TextView
                android:id="@+id/detail_categories_size"
                style="@style/Details.GridSecondText" />

            <TextView
                style="@style/Details.GridSecondLabel"
                android:text="@string/detail_label_style" />

            <TextView
                android:id="@+id/detail_categories_style"
                style="@style/Details.GridSecondText" />

            <TextView
                style="@style/Details.GridSecondLabel"
                android:text="@string/detail_label_doors" />

            <TextView
                android:id="@+id/detail_doors"
                style="@style/Details.GridSecondText" />

            <TextView
                style="@style/Details.GridSecondLabel"
                android:text="@string/detail_label_transmission" />

            <TextView
                android:id="@+id/detail_transmission"
                style="@style/Details.GridSecondText" />

            <TextView
                style="@style/Details.GridSecondLabel"
                android:text="@string/detail_label_no_of_speeds" />

            <TextView
                android:id="@+id/detail_num_speeds"
                style="@style/Details.GridSecondText" />

        </GridLayout>

        <TextView
            style="@style/Details.GridTitle"
            android:text="@string/detail_header_engine" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="8dp">

            <TextView
                style="@style/Details.GridFirstLabel"
                android:text="@string/detail_label_name" />

            <TextView
                android:id="@+id/detail_engine_name"
                style="@style/Details.GridText" />

            <TextView
                style="@style/Details.GridSecondLabel"
                android:text="@string/detail_label_type" />

            <TextView
                android:id="@+id/detail_engine_type"
                style="@style/Details.GridSecondText" />

            <TextView
                style="@style/Details.GridSecondLabel"
                android:text="@string/detail_label_cylinders" />

            <TextView
                android:id="@+id/detail_engine_cylinders"
                style="@style/Details.GridSecondText" />

            <TextView
                style="@style/Details.GridSecondLabel"
                android:text="@string/detail_label_size" />

            <TextView
                android:id="@+id/detail_engine_size"
                style="@style/Details.GridSecondText" />

            <TextView
                style="@style/Details.GridSecondLabel"
                android:text="@string/detail_label_horse_power" />

            <TextView
                android:id="@+id/detail_engine_horse_power"
                style="@style/Details.GridSecondText" />

        </GridLayout>

        <TextView
            style="@style/Details.GridTitle"
            android:text="@string/detail_header_mpg" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:padding="8dp">

            <TextView
                style="@style/Details.GridFirstLabel"
                android:text="@string/detail_label_highway" />

            <TextView
                android:id="@+id/detail_mpg_highway"
                style="@style/Details.GridText" />

            <TextView
                style="@style/Details.GridSecondLabel"
                android:text="@string/detail_label_city" />

            <TextView
                android:id="@+id/detail_mpg_city"
                style="@style/Details.GridSecondText" />
        </GridLayout>

    </LinearLayout>
</ScrollView>

